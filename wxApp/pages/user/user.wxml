<view class="page">
    <view class="page__bd page__bd_spacing">
        <block wx:if="{{isCompany}}">
            <view class="tips waiting icon_sp_area" wx:if="{{company.status == 0}}">
                <icon type="waiting" size="20" color="orange"></icon>审核中
            </view>
            <navigator url="/pages/chose/record" wx:elif="{{company.status == 2}}">
                <view class="tips warn icon_sp_area">
                    <icon type="warn" size="20" color="red"></icon>被拒绝：{{company.refuseReason}}
                    <span class="myIcon icon-right"></span>
                </view>
            </navigator>
        </block>

        <navigator url="/pages/user/info" class="weui-flex top bg-green">
            <view class="weui-flex__item header">
                <block wx:if="{{!isCompany}}">
                    <image src="{{user.avatar}}"></image>
                </block>
                <block wx:else>
                    <image src="{{domain + company.icon}}"></image>
                </block>
            </view>
            <view class="weui-flex__item right text-white text-m" style="max-width:530rpx;">
                <view class="weui-flex__item text-line">{{!isCompany ? user.username : company.name}}</view>
                <view class="weui-flex__item phone">{{user.phone}}</view>
            </view>
            <view class="weui-flex__item a-c" style="max-width:60rpx;line-height:150rpx;">
                <span class="myIcon icon-right text-white" style="color:#fff;margin:0;"></span>
            </view>
        </navigator>
    </view>

    <scroll-view class="list">
        <view class="weui-cells__title">常用</view>
        <view class="weui-cells weui-cells_after-title">
            <view bindtap="goIndex" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd"><span class="myIcon icon-city"></span>{{isCompany ? "发布招聘":"去兼职"}}
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
            <navigator url="/pages/job/userList" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd"><span class="myIcon icon-job"></span>{{isCompany ? "我的招聘":"我的兼职"}}
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <block wx:if="{{!isCompany}}">
                <navigator url="/pages/job/userList?isFollow=1" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd"><span class="myIcon icon-job"></span>我的关注
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="goClock">
                    <view class="weui-cell__bd"><span class="myIcon icon-clock"></span>面试扫码
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </block>
            <block wx:else>
                <navigator url="/pages/company/verify" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd"><span class="myIcon icon-verify"></span>工时审核
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">
                        <view class="weui-badge" style="margin-left: 5px;margin-right: 5px;" wx:if="{{verifyNum>0}}">{{verifyNum}}</view>
                    </view>
                </navigator>
                <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="goUsers">
                    <view class="weui-cell__bd"><span class="myIcon icon-account"></span>员工列表
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <navigator url="/pages/job/scan" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd"><span class="myIcon icon-scan"></span>扫码招聘
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
            </block>
        </view>
        <view class="weui-cells__title">关于</view>
        <view class="weui-cells weui-cells_after-title">
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd"><span class="myIcon icon-phone"></span>联系我们
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd"><span class="myIcon icon-form"></span>用户协议
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd"><span class="myIcon icon-help"></span>常见问题
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
        <view class="weui-footer">
            <view class="weui-footer__text">Copyright © 2008-2016 weui.io</view>
        </view>
    </scroll-view>
</view>

