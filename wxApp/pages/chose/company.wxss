.page{
    padding:0;
}
.avatar{
    padding:0 !important;
    position: relative;
    margin-bottom:30rpx;
}
.avatar .cover{
    width: 750rpx;
    height:375rpx;
}
.avatar .cover-icon{
    position: absolute;
    right:30rpx;
    top:20rpx;
    font-size:50rpx;
    color:rgba(255,255,255,0.6);
}

.icon-view{
    position: absolute;
    border:10rpx solid #fefefe;
    left:290rpx;
    top:112.5rpx;
    border-radius:100%;
    width: 150rpx;
    height: 150rpx;
}
.avatar .userAvatar{
    position: absolute;
    left:0;
    right:0;
}
.icon-view .myIcon{
    position:absolute;
    left:0;
    top:0;
    font-size:90rpx;
    color:rgba(255,255,255,0.6);
    width:100%;
    background-color:rgba(250,250,250,0.3);
    height:100%;
    -webkit-border-radius:100%;
    -moz-border-radius:100%;
    border-radius:100%;
}

.buttons{
    padding:0 30rpx;
}


.radio-group{
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
}
.radio.type{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
}

.weui-cells__title{
    color:#000;
    font-size:18px;
}

map {
    width: 100%;
    margin: 20rpx 0;
    text-align:center;
    line-height:300rpx;
    color:#ccc;
}

textarea{
    background-color: #fff;
}

span.deleteImage{
    position: absolute;
    top:0;
    left:0;
    line-height:79px;
    text-align: center;
    width:100%;
    color: #aaa;
    font-size: 35px;
}
.weui-uploader__input-box.delete:before{
    background-color:#fff
}