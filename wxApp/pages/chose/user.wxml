<view class="page">
    <view class="page__hd avatar">
        <image class="userAvatar" src="{{user.avatar}}"> </image>
    </view>
    <view class="page__bd page__bd_spacing" wx:if="{{type==0}}">
        <button class="weui-btn" type="primary" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" >使用微信绑定的手机号</button>
        <button class="weui-btn" type="default" bindtap="userBindPhone">使用其他手机号</button>
    </view>
    <view class="weui-cells weui-cells_after-title" wx:else>
        <form bindsubmit="bindPhone">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">姓名</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" placeholder="请输入真实姓名" name="name"/>
                    </view>
                </view>
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">手机号</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" type="number" name="phone" disabled="{{type!=2}}" value="{{phone}}" placeholder="请输入手机号"/>
                    </view>
                </view>
                <view class="weui-cell weui-cell_input weui-cell_vcode" wx:if="{{type==2}}">
                    <view class="weui-cell__hd">
                        <view class="weui-label">验证码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" type="number" placeholder="请输入验证码"/>
                    </view>
                    <view class="weui-cell__ft">
                        <view class="weui-vcode-btn" bindtap="sendCode">获取验证码</view>
                    </view>
                </view>
            </view>
            <checkbox-group bindchange="bindAgreeChange">
                <label class="weui-agree" for="weuiAgree">
                    <view class="weui-agree__text">
                        <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}"/>
                        <view class="weui-agree__checkbox-icon">
                            <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9"
                                  wx:if="{{isAgree}}"></icon>
                        </view>
                        阅读并同意
                        <navigator url="" class="weui-agree__link">《相关条款》</navigator>
                    </view>
                </label>
            </checkbox-group>
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" form-type="submit" disabled="{{!isAgree}}">确定</button>
            </view>
        </form>
    </view>

</view>