<view class="page">
    <view class="page__hd avatar" wx:if="{{user.avatar}}">
        <image class="userAvatar" src="{{user.avatar}}"> </image>
    </view>
    <view class="page__bd page__bd_spacing" wx:if="{{user.type==0}}">
        <navigator url="/pages/chose/user">
            <button class="weui-btn" type="primary" lang="zh_CN" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
                我要求职
            </button>
        </navigator>
        <navigator url="/pages/chose/company" class="btn2">
            <button class="weui-btn btn2" type="default" lang="zh_CN" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
                我要招聘
            </button>
        </navigator>
    </view>
    <view class="" wx:elif="{{user.type==1}}">

    </view>
    <view class="" wx:else>

    </view>
</view>