.topTips{
    position: fixed;
    top: 0;
    left:0;
    width: 100%;
}
.topTips>view {
    height: 29px;
    line-height: 29px;
    border-bottom: 1px solid #ebccd1;
    background-color: #f2dede;
    color: #a94442;
}
.bottom{
    text-align: center;
    border-top: 1px solid #eee;
    position: fixed;
    height: 120rpx;
    bottom:0;
    left:0;
    width: 100%;
}
.bottom .text{
    font-size: 20rpx;
}
.bottom .icon{
    font-size: 40rpx;
    color: #999;
    height:80rpx;
    line-height:80rpx;
}
.bottom .icon.iconLike .myIcon{
    font-size:18px;
}

.bottom .like{
    color: #09bb07;
}
.bottom .right{
    line-height: 48px;
    color: #fff;
}
.bottom .right.green{
    background-color: #09bb07;
    border-radius:0;
}
.bottom .right.grey{
    background-color: #aaa;
}
.bottom .right.orange{
    background-color: #ec971f;
}
.bottom .right.blue{
    background-color: #31b0d5;
}
.bottom .right.red{
    background-color: #d9534f;
}

map{
    width:100%;
}


.header,.middle,.footer{
    padding:30rpx;
}
.footer{
    margin-bottom:30rpx;
}
.footer image{
    max-width: 80rpx;
    max-height:80rpx;
    border-radius:80rpx;
}