@import "../prompt.wxss";
.header {
    height: 150rpx;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 30rpx;
}

.header .image {
    max-width: 150rpx;
    padding: 15rpx;
}

.header .image image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
}

.header .title {
    font-size: 34rpx;
    line-height: 100rpx;
}

.header .title .desc {
    font-size: 26rpx;
    line-height: 30rpx;
}

.header .right {
    max-width: 60rpx;
    line-height: 150rpx;
}

.qrCode {
    margin-bottom: 30rpx;
}

.qrCode .qrImg {
    margin: 0 auto;
}

.clock .tips{
    background-color: #444;
    line-height:50rpx;
    padding:5rpx;
}
.clock-round{
    display: block;
    margin:0 auto;
    width: 200rpx;
    height:200rpx;
    border-radius:200rpx;
    line-height:185rpx;
    padding: 0;
}
.clock-round.bg-grey{
    background-color: #999;
}
.clock-round .time{
    line-height: 50rpx;
    margin-top:-60rpx;
}
.tips{
    display: block;
    margin: 20rpx auto;
}

.prompt-contain .weui-cell{
    padding-left: 0;
}
.prompt-contain .weui-cell:before{
    left: 0;
}

.bottom-btn{
    position: fixed;
    left:0;
    bottom: 0;
    padding: 10rpx 0;
    width:100%;
}
.bottom-btn button{
    margin:0 30rpx;
}